\ifshorthand@tikz
	\RequirePackage{tikz}
	\usetikzlibrary{patterns,calc,cd,graphs,matrix,arrows.meta,positioning}

	\ifLuaTeX
		\usetikzlibrary{graphdrawing}
		\usegdlibrary{trees,layered}
	\fi

	\NewEnviron{tikzpic}[1][]{%
		\ifLuaTeX
		\begin{tikzpicture}[>=Stealth,#1]
		\expandafter\BODY
